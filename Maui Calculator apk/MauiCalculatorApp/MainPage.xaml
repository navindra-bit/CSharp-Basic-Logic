<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCalculatorApp.MainPage">

    
        <VerticalStackLayout Padding="20" Spacing="10">
         
            <Entry x:Name="Display" FontSize="32" HorizontalTextAlignment="End" IsReadOnly="True" />


        <Grid RowSpacing="10" ColumnSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO"></RowDefinition>
                <RowDefinition Height="AUTO"></RowDefinition>
                <RowDefinition Height="AUTO"></RowDefinition>
                <RowDefinition Height="AUTO"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*"></ColumnDefinition>
               <ColumnDefinition Width="*"></ColumnDefinition>
               <ColumnDefinition Width="*"></ColumnDefinition>
               <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Text="7" Clicked="OnClicked" Grid.Row="0" Grid.Column="0" />
            <Button Text="8" Clicked="OnClicked" Grid.Row="0" Grid.Column="1" />
            <Button Text="9" Clicked="OnClicked" Grid.Row="0" Grid.Column="2" />
            <Button Text="*" Clicked="CalcOper" Grid.Row="0" Grid.Column="3" />


            <Button Text="4" Clicked="OnClicked" Grid.Row="1" Grid.Column="0" />
            <Button Text="5" Clicked="OnClicked" Grid.Row="1" Grid.Column="1" />
            <Button Text="6" Clicked="OnClicked" Grid.Row="1" Grid.Column="2" />
            <Button Text="-" Clicked="CalcOper" Grid.Row="1" Grid.Column="3" />

            <Button Text="1" Clicked="OnClicked" Grid.Row="2" Grid.Column="0" />
            <Button Text="2" Clicked="OnClicked" Grid.Row="2" Grid.Column="1" />
            <Button Text="3" Clicked="OnClicked" Grid.Row="2" Grid.Column="2" />
            <Button Text="+" Clicked="CalcOper" Grid.Row="2" Grid.Column="3" />

            <Button Text="/"  Clicked="CalcOper" Grid.Row="3" Grid.Column="0"/>
            <Button Text="0" Clicked="OnClicked"  Grid.Row="3" Grid.Column="1"/>
            <Button Text="C" Clicked="OnClear"  Grid.Row="3" Grid.Column="2" />
            <Button Text="=" Clicked="OnCalc"  Grid.Row="3" Grid.Column="3"/>

            </Grid>
        </VerticalStackLayout>
   


</ContentPage>



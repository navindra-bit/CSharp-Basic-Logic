<Window x:Class="UserRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserRegister"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <StackPanel>
        <StackPanel Margin="90,90,90,0">
            <TextBlock Text="User Name" Margin="0,0,0,10" FontSize="17" FontWeight="Medium"></TextBlock>
            <TextBox x:Name="Usernamebox" Margin="0,0,0,10" FontSize="16"></TextBox>
            <TextBlock Text="User Age" Margin="0,0,0,10" FontSize="17" FontWeight="Medium"></TextBlock>
        <TextBox x:Name="useragebox" FontSize="16"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="regbnt" Content="Regsiter" 
                FontWeight="Medium" FontSize="18"
                Click="regbnt_Click" 
                Margin="30" Width="100"></Button>
        <Button x:Name="Clearbnt" Content="Clear" 
                FontWeight="Medium" FontSize="18" 
                Click="Clearbnt_Click" Margin="30" 
                Width="100"></Button>
        </StackPanel>
    </StackPanel>


</Window>
